FROM debian:sid-20230227-slim

LABEL org.opencontainers.image.authors="nic.cheneweth@thoughtworks.com" \
      org.opencontainers.image.description="Debain-based CircleCI executor image" \
      org.opencontainers.image.licenses="MIT" \
      org.opencontainers.image.source="https://github.com/ThoughtWorks-DPS/circleci-remote-docker" \
      org.opencontainers.image.title="circleci-remote-docker" \
      org.opencontainers.image.vendor="ThoughtWorks, Inc."

# minimum packages required for use as a circleci remote-docker primary container
RUN apt-get update && \
    apt-get install --no-install-recommends -y \
            git=1:2.39.2-1.1 \
            openssh-server=1:9.2p1-2 \
            tar=1.34+dfsg-1.1 \
            gzip=1.12-1 \
            ca-certificates=20230311 && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*
